@model ForumApp.ViewModels.Posts.PostIndexModel

<h1>@Model.Title</h1>
<div>
    User: @Model.UserName (@Model.UserRaiting)
    Account created:@Model.Created

</div>
<div>
    @Model.PostContent
</div>

@if (Model.Replies.Any()) 
{

    foreach(var reply in Model.Replies)
                {
                    <div>
                        <div>
                            Reply User: @reply.UserName 
                             Reply created:@reply.Created
                        </div>
                        <div>
                            @reply.ReplyContent
                        </div>
                    </div>
                }

}