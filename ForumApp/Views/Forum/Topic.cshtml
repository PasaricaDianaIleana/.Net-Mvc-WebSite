@model ForumApp.ViewModels.Posts.ForumPostList

<h1>Welcome to the @Model.Forum.Title Forum! </h1>
<span id="headingBtn">
    <a asp-controller="Post" asp-action="CreatePost" asp-route-Id="@Model.Forum.Id" class="btn btn-NewPost">
        Create Post
    </a>
</span>
@if (Model.Posts.Any())
{
<table class="table table-bordered table-hover" >
    <tbody>
        @foreach (var post in Model.Posts)
        {
            <tr>
                <td>
                    <a asp-controller="Post" asp-action="Index" asp-route-id="@post.Id">
                        @post.Title
                    </a>  
                </td>
                <td>@post.UserName</td>
                <td>@post.DatePosted</td>
                <td>@post.RepliesNumber</td>
            </tr>
        }
    </tbody>
</table>
}
else
{
    <div class="noPosts">
        <h3>No posts on forum @Model.Forum.Title!</h3>
        <a asp-controller="Post" asp-action="CreatePost" asp-route-Id="@Model.Forum.Id">
          Create Post
        </a>
    </div>
}
